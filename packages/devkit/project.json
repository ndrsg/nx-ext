{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/devkit/src",
  "projectType": "library",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "push": true,
        "noVerify": true,
        "postTargets": [
          "devkit:publish",
          "devkit:github"
        ]
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public"
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}",
        "title": "@ndrsg/devkit@${version}"
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/devkit",
        "main": "packages/devkit/src/index.ts",
        "tsConfig": "packages/devkit/tsconfig.lib.json",
        "assets": ["packages/devkit/*.md"]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/devkit/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/devkit"],
      "options": {
        "jestConfig": "packages/devkit/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
